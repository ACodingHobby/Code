def pythagorean_triple(integers):
    sorted_triple = sorted(integers)
    return sorted_triple


def is_pythagorean_triple(integers):
    sorted_triple = pythagorean_triple(integers)
    a, b, c = sorted_triple

    if a**2 + b**2 == c**2:
        return True
    else:
        return False


# Your Pythagorean triple
pythagorean_list = [966, 88, 373]

# Sort the Pythagorean triple
sorted_list = pythagorean_triple(pythagorean_list)
print(sorted_list)

# Check if it's a Pythagorean triple
is_pythagorean = is_pythagorean_triple(sorted_list)
print(is_pythagorean)
